{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (compiled ESM)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/index.js",
      "cwd": "${workspaceFolder}",

      // Allow ESM
      "runtimeArgs": ["--enable-source-maps"],

      // Correct: do NOT use runtimeVersion unless absolutely needed
      // It causes nvm + env quoting issues
      // "runtimeVersion": "24.11.1",

      // VS Code can map TS breakpoints â†’ JS
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "runtimeVersion": "24.11.1",
      // Build first
      "preLaunchTask": "tsc: build - tsconfig.json",

      // This avoids the broken quoting in external terminals
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
